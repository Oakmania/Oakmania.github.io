<script>
function calculateTotal(itemNumber, itemValue) {
  const qty = document.getElementById(`item${itemNumber}Qty`).value;
  if (qty < 0) return;

  const total = (qty * itemValue).toFixed(2);
  document.getElementById(`item${itemNumber}Total`).value = total;

  calculateEarnings();
}

function calculateEarnings() {
  const item1Total = parseFloat(document.getElementById('item1Total').value) || 0;
  const item2Total = parseFloat(document.getElementById('item2Total').value) || 0;
  const item3Total = parseFloat(document.getElementById('item3Total').value) || 0;
  const item4Total = parseFloat(document.getElementById('item4Total').value) || 0;

  const totalSold = (item1Total + item2Total + item3Total + item4Total).toFixed(2);
  document.getElementById('totalSold').value = totalSold;

  const totalEarnings = (250 + (totalSold * 0.09)).toFixed(2);
  document.getElementById('totalEarnings').value = totalEarnings;
}
</script>
